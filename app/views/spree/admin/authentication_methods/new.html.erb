<% admin_breadcrumb(t('spree.settings') ) %>
<% admin_breadcrumb link_to I18n.t('spree.social_authentication_methods'), spree.admin_authentication_methods_path %>
<% admin_breadcrumb I18n.t('spree.new_social_method') %>

<% content_for :page_actions do %>
  <li><%= link_to I18n.t('spree.back_to_authentication_methods_list'), admin_authentication_methods_path, class: 'btn btn-primary' %></li>
<% end %>

<%= render 'spree/shared/error_messages', target: @authentication_method %>

<%= form_for [:admin, @authentication_method] do |f| %>
  <fieldset class="no-border-top">
    <%= render 'form', f: f %>
    <% if can? :manage, Spree::AuthenticationMethod %>
      <%= render 'spree/admin/shared/new_resource_links' %>
    <% end %>
  </fieldset>
<% end %>
